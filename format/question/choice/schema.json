{
  "id": "choice-question",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "base-question"
    },
    {
      "type": "object",
      "properties": {
        "random": {
          "type": "boolean"
        },
        "multiple": {
          "type": "boolean"
        },
         "choices": {
          "type": "array",
          "minItems": 2,
          "uniqueItems": true,
          "items": {
            "$ref": "content"
          }
        },
         "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "score": {
                "type": "number"
              }
            },
            "required": ["id", "score"],
            "additionalProperties": false
          }
        }
      },
      "required": ["random", "multiple", "choices"]
    }
  ]
}
