{
  "id": "http://liblearn.org/schemas/question/choice/schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "random": {
      "type": "boolean"
    },
    "multiple": {
      "type": "boolean"
    },
    "choices": {
      "type": "array",
      "minItems": 2,
      "uniqueItems": true,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "pattern": "^[^/]+/[^/]+$"
              },
              "encoding": {
                "type": "string"
              },
              "data": {
                "type": "string"
              }
            },
            "required": ["id", "type", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "pattern": "^[^/]+/[^/]+$"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["id", "type", "url"],
            "additionalProperties": false
          }
        ]
      }
    },
    "hints": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "penalty": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
          }
        },
        "required": ["id", "text"],
        "additionalProperties": false
      }
    },
    "solutions": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "feedback": {
      "type": "string"
    }
  },
  "required": ["id",  "title", "random", "multiple", "choices"],
  "additionalProperties": false
}