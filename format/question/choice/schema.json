{
  "id": "http://liblearn.org/schemas/question/choice/schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "choices": {
      "type": "array",
      "minItems": 2,
      "uniqueItems": true,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "pattern": "^[^/]+/[^/]+$"
              },
              "encoding": {
                "type": "string"
              },
              "data": {
                "type": "string"
              }
            },
            "required": ["id", "type", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "pattern": "^[^/]+/[^/]+$"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["id", "type", "url"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["id",  "title", "choices"],
  "additionalProperties": false
}