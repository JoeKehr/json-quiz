{
  "id": "cloze-question",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "base-question"
    },
    {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "holes": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "size": {
                "type": "integer",
                "minimum": 1
              },
              "placeholder": {
                "type": "string"
              },
              "choices": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["id"]
          }
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "holeId": {
                "type": "string"
              },
              "answers": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              },
              "score": {
                "type": "number"
              }
            },
            "required": ["holeId", "answers", "score"]
          }
        }
      },
      "required": ["text"]
    }
  ]
}
